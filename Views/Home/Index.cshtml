@{
    ViewData["Title"] = "Inicio";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/carrusel/primer_huerto.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Crea un huerto desde la comodidad de tu casa</h5>
                <p>#QuedateEnCasa</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/carrusel/2.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Encontraras recomendaciones para tus huertos</h5>
                <p>Cultivos en todo el Ecuador</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/carrusel/3.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Tener un huerto en casa ayuda a tu boLsillo</h5>
                <p> Toda información encontraras en nuestra eb</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>